        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="android:itemBackground">@color/SurfaceContainer_cream</item>
        <item name="android:itemTextAppearance">@style/Body_Medium</item>
        <item name="android:colorBackgroundFloating">@color/SurfaceContainer_cream</item>
        <item name="android:popupBackground">@color/SurfaceContainer_cream</item>
        <item name="actionMenuTextColor">@color/colorRed</item>
