<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/PrimaryContainer_cream</item>
        <item name="colorPrimaryDark">@color/SurfaceDim_cream</item>
