    <style name="BGTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/Body_Medium</item>
        <item name="boxBackgroundColor">@color/SurfaceContainerLow_cream</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/Outline_cream</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
        <item name="boxCornerRadiusBottomEnd">2dp</item>
        <item name="boxStrokeErrorColor">@color/Error_cream</item>
        <item name="errorTextColor">@color/Error_cream</item>
        <item name="errorTextAppearance">@style/Label_Small</item>
    </style>

    <style name="BGEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/Outline_cream</item>
    </style>

    <style name="BGSpinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/Body_Medium</item>
        <item name="boxBackgroundColor">@color/SurfaceContainerLow_cream</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/Outline_cream</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
        <item name="boxCornerRadiusBottomEnd">2dp</item>
        <item name="boxStrokeErrorColor">@color/Error</item>
        <item name="errorTextColor">@color/Error</item>
        <item name="endIconDrawable">@drawable/keyboard_arrow_down_24px</item>
        <item name="endIconTint">@color/Secondary</item>
        <item name="errorTextAppearance">@style/Label_Small</item>
    </style>

    <style name="BG_ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/OnPrimaryContainer_cream</item>
        <item name="backgroundColor">@color/PrimaryContainer_cream</item>
        <item name="android:textAppearance">@style/Label_Small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BG_ActionText">
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/PrimaryContainer_cream</item>
    </style>

    <style name="BG_ActionTextSmall">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/PrimaryContainer_cream</item>
    </style>

    <style name="BG_FAB">
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/PrimaryContainer_cream</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">24dp</item>
        <item name="srcCompat">@drawable/ic_icons8_plus_white</item>
        <item name="tint">@color/OnPrimaryContainer_cream</item>
    </style>

    <style name="BG_FAB_Medium">
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/PrimaryContainer_cream</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">18dp</item>
        <item name="srcCompat">@drawable/ic_icons8_plus_white</item>
        <item name="tint">@color/OnPrimaryContainer_cream</item>
    </style>

    <style name="BG_MiniFAB">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:outlineAmbientShadowColor">@color/secondaryText</item>
        <item name="backgroundTint">@color/SecondaryContainer_cream</item>
        <item name="elevation">2dp</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">24dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="tint">@color/OnSecondaryContainer_cream</item>
    </style>

    <style name="BG_MiniFABText">
        <item name="android:background">@color/SurfaceContainerHigh_cream</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/OnSurfaceVar_cream</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@style/Body_Medium</item>
    </style>

    <style name="BG_Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/InverseSurface_cream</item>
        <item name="android:textColor">@color/InverseOnSurface_cream</item>
    </style>

    <style name="BG_TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/Surface_cream</item>
        <item name="tabIndicatorColor">@color/Primary_cream</item>
        <item name="tabSelectedTextColor">@color/OnSurface_cream</item>
        <item name="tabTextColor">@color/OnSurfaceVar_cream</item>
    </style>

    <style name="BG_Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="colorContainer">@color/SecondaryContainer_cream</item>
        <item name="android:textColor">@color/OnSecondaryContainer_cream</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="rippleColor">@color/OnPrimary_cream</item>
        <item name="chipStrokeColor">@color/Outline_cream</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/Body_Small</item>
    </style>

    <style name="BG_Calendar">
        <item name="headerColor">@color/SecondaryContainer_cream</item>
        <item name="headerLabelColor">@color/OnSecondaryContainer_cream</item>
        <item name="pagesColor">@color/Surface_cream</item>
        <item name="highlightedDaysLabelsColor">@color/PrimaryContainer_cream</item>
        <item name="daysLabelsColor">@color/OnSecondaryContainer_cream</item>
        <item name="todayLabelColor">@color/PrimaryContainer_cream</item>
        <item name="abbreviationsBarColor">@color/SurfaceDimTransparent_cream</item>
        <item name="abbreviationsLabelsColor">@color/OnSurface_cream</item>
    </style>
    
    <style name="BG_Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/SurfaceContainer_cream</item>
        <item name="strokeColor">@color/OnSurfaceVar_cream</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="android:outlineSpotShadowColor">@color/black</item>
        <item name="android:outlineAmbientShadowColor">@color/black</item>
    </style>
</resources>